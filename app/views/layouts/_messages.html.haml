- if !flash.empty?
  %aside.alerts
    - flash.each do |name, msg|
      .alert{ class: "alert-#{name == :notice ? 'success' : name}"}
        - if msg.is_a?(String)
          %button{ type: "button", class: "close", data: {dismiss: "alert"} }
            &times;
          = msg
          - flash.delete(name)